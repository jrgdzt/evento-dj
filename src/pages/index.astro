---
import Layout from '../layouts/Layout.astro';
import evento from '../content/evento.md';

const { frontmatter } = await evento.render();
---

<Layout title={`Evento: ${frontmatter.dj}`}>
  <main style="max-width: 800px; margin: 0 auto; padding: 2rem;">
    <h1 style="font-size: 3rem; margin-bottom: 1rem; color: #00ff88;">
      {frontmatter.dj}
    </h1>
    
    <img 
      src={frontmatter.flyer} 
      alt="Flyer del evento"
      style="width: 100%; max-width: 500px; border-radius: 10px; margin: 2rem 0;"
    />
    
    <div style="margin: 2rem 0;">
      <p style="font-size: 1.2rem;">
        <strong>ğŸ“… Fecha:</strong> {new Date(frontmatter.fecha).toLocaleDateString()}
      </p>
      <p style="font-size: 1.2rem;">
        <strong>ğŸ“ Lugar:</strong> {frontmatter.lugar}
      </p>
      <p style="font-size: 1.2rem;">
        <strong>ğŸ’° Precio:</strong> {frontmatter.precio}
      </p>
      <p style="font-size: 1.1rem; margin-top: 1.5rem; line-height: 1.6;">
        {frontmatter.descripcion}
      </p>
    </div>
    
    <a 
      href="/admin"
      style="display: inline-block; margin-top: 2rem; padding: 1rem 2rem; background: #00ff88; color: #000; text-decoration: none; border-radius: 5px; font-weight: bold;"
    >
      Editar Evento (Admin)
    </a>
  </main>
</Layout>